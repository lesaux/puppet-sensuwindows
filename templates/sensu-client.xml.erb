<!--
  Windows service definition for Sensu
-->
<service>
 <id>sensu-client</id>
 <name>Sensu Client</name>
 <description>This service runs a Sensu client</description>
 <executable><%= @installdrive =>:\<%= @installdir =>\sensu\embedded\bin\ruby.exe</executable>
 <arguments><%= @installdrive =>:\<%= @installdir =>\sensu\embedded\bin\sensu-client -d <%= @installdrive =>:\<%= @installdir =>\sensu\conf.d -l <%= @installdrive =>:\<%= @installdir =>\sensu\sensu-client.log</arguments>
</service> 

